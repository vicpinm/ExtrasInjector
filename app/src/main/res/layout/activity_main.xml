<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.vicpin.extrasprocessor.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:textStyle="bold"
        android:text="@string/extras_info" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data #1: optional String"
        />

    <EditText
        android:id="@+id/stringValue"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"

        android:hint="Write here..."/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="Data #2: boolean value (mandatory)" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/booleanValue"
        android:layout_width="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data #3: double value (mandatory)" />

    <EditText
        android:id="@+id/decimalValue"
        android:inputType="numberDecimal"
        android:layout_width="150dp"
        android:layout_marginBottom="30dp"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/next" />

</LinearLayout>
